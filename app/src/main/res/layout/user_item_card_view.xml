<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPadding="5dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/primaryLightColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cardView_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name is here"
                android:textStyle="italic"
                android:textColor="#FF020923"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/cardView_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="user id is here"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_user_id"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_user_id" />
            <TextView
                android:id="@+id/cardView_user_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="user job is here"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_work"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_work" />
            <TextView
                android:id="@+id/cardView_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="car email is here"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:drawableStart="@drawable/ic_email" />
            <TextView
                android:id="@+id/cardView_user_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="user current balance is here"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_monetization_on_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
